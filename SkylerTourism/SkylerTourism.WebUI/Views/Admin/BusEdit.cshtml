@model Bus

<form asp-controller="Admin" asp-action="BusEdit" method="post">

    <input type="hidden" value="@Model.BusId" name="BusId" />
    <div class="card p-3 m-5 bg-light text-dark">
        <h5> EDIT BUS </h5>
        <div class=" card-body mt-2 align-items-center">

            <label class="fw-bold">Seat Capacity</label>

            <div class="col-3 text-center  mb-3">
                <input class="form-control" style="width:10rem" asp-for="SeatCapacity" type="text" />

            </div>

            <div class="col-3 text-center  mb-3">
                <button style="width:10rem" class="btn btn-success" type="submit">SAVE CHANGE</button>
            </div>



</form>



