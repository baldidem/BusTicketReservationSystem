@model Passenger

<h5> EDIT PASSENGER </h5>

<form asp-controller="Admin" asp-action="PassengerEdit" asp-route-id=@ViewBag.Required method="post">

    <input type="hidden" value="@Model.PassengerId" name="PassengerId" />

    <div class="card p-3 m-5 bg-light text-dark">
        <div class=" card-body mt-2 align-items-center">

            <label class="fw-bold">Passenger Name</label>

            <div class="col-3 text-center  mb-3">
                <input class="form-control" style="width:15rem" asp-for="PassengerName" />

            </div>
            <label class="fw-bold">Passenger Surname</label>

            <div class="col-3 text-center  mb-3">
                <input class="form-control" style="width:15rem" asp-for="PassengerSurname" />

            </div>
            <label class="fw-bold">Identity Number</label>

            <div class="col-3 text-center  mb-3">
                <input class="form-control" style="width:15rem" asp-for="IdentityNumber" />

            </div>
            <label class="fw-bold">Email</label>

            <div class="col-3 text-center  mb-3">
                <input class="form-control" style="width:15rem" asp-for="EMail" />

            </div>

            <div class="col-3 text-center  mb-3">
                <button style="width:10rem" class="btn btn-success" type="submit">SAVE CHANGE</button>
            </div>



</form>